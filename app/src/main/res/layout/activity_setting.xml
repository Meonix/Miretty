<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">
    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/setting_toolbar"
        ></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="46dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/background_profile_image"
        android:id="@+id/TvSpace"
        />
    <ImageView
        android:id="@+id/background_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_below="@+id/setting_toolbar"
        android:layout_height="wrap_content"
        android:src="@drawable/background_default" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/TvSpace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/set_user_name"
        app:civ_border_color="@color/colorPrimary"/>
<EditText
    android:id="@+id/set_user_name"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/set_profile_image"
    android:inputType="textMultiLine"
    android:hint="username"
    android:textAlignment="center"
    android:drawableStart="@drawable/edituser48"
    android:textColor="@color/colorPrimaryDark"
    android:drawableLeft="@drawable/edituser48"
    android:textStyle="bold"
    android:background="@drawable/inputs"
    app:layout_constraintTop_toBottomOf="@id/set_profile_image"
    app:layout_constraintBottom_toTopOf="@id/set_profile_status"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginLeft="15dp"
    android:padding="6dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    />
    <EditText
        android:id="@+id/set_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="hi , I am available now."
        android:textAlignment="center"
        android:drawableStart="@drawable/editprofile"
        android:textColor="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/editprofile"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/inputs"
        app:layout_constraintTop_toBottomOf="@id/set_user_name"
        app:layout_constraintBottom_toTopOf="@id/update_settings_buttton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/update_settings_buttton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/set_profile_status"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

</android.support.constraint.ConstraintLayout>